// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  isAdmin  Boolean @default(false)
  fullName String?
  address  String?
  carts    Cart[]
  order    Order[]
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?
  price       BigInt
  images      Image[]
  carts       Cart[]
  orders      Order[]
}

model Image {
  id        Int      @id @default(autoincrement())
  href      String
  isCover   Boolean  @default(false)
  Product   Product? @relation(fields: [productId], references: [id])
  productId Int?
}

model Cart {
  id         Int       @id @default(autoincrement())
  User       User?     @relation(fields: [user_id], references: [id])
  user_id    Int?
  totalPrice BigInt
  products   Product[]
}

model Order {
  id         Int       @id @default(autoincrement())
  user       User      @relation(fields: [user_id], references: [id])
  user_id    Int
  product    Product[]
  finalPrice BigInt[]
}
